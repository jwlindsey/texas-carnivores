<%= will_paginate @shops %>
<% @shops.each do |shop| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to shop.name, shop_path(shop) %></h1><br />
    <i><%= shop.address %></i><br /><br />
    <p><%= shop.description %></p><br />

    <% if shop.user.present? %>
      <small><%= shop.user.email %></small>
    <% end %>
  </div>

  <hr />
<% end %>
